<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.5/css/dataTables.bootstrap5.css">

    <script defer src = "https://cdn.datatables.net/2.0.6/js/dataTables.js"></script>
    <script>
        new DataTable('#example');
    </script>


    <title>Table</title>
</head>
<body>
<h1>Data from SQL Database</h1>
<table id="example" class="table table-striped" style="width:100%">
    <input type="text" placeholder="name" name = 'username_query'>
    <input type="text" placeholder="track" name = 'track_query'>
    <input type="text" placeholder="grade" name = 'grade_query'>
    <thead>
    <tr>
        <th>Name</th>
        <th>Track</th>
        <th>Grade</th>
        <!-- Add more <th> elements for each column if needed -->
    </tr>
    </thead>
    <tbody>
    <% data.forEach(row => { %>
        <tr>
            <td><%= row.username %></td>
            <td><%= row.track %></td>
            <td><%= row.grade %></td>
            <!-- Add more <td> elements for each column if needed -->
        </tr>
    <% }); %>
    </tbody>
</table>
<input class="form__button" type="submit" value = 'Search'>
</body>
</html>
