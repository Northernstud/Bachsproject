<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <script
                src="https://code.jquery.com/jquery-3.7.1.min.js"
                integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
                crossorigin="anonymous"></script>
        <link rel="stylesheet" href = "https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
        <link rel="stylesheet" href = "https://cdn.datatables.net/2.0.6/css/dataTables.bootstrap5.css">
        <script src = "https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
        <script src = "https://cdn.datatables.net/2.0.6/js/dataTables.js"></script>
        <script src = "https://cdn.datatables.net/2.0.6/js/dataTables.bootstrap5.js"></script>

        <script>
            $(document).ready(function () {
                $('#example').dataTable();
            });
        </script>
    <title>Table</title>
</head>
<body>
<form action="/query" method="post">
<h1>Find yourself!</h1>
<table id="example" class="table table-striped" style="width:100%">
    <input type="text" placeholder="name" name = 'username_query'>
    <input type="text" placeholder="track" name = 'track_query'>
    <input type="text" placeholder="grade" name = 'grade_query'>
    <thead>
    <tr>
        <th>Name</th>
        <th>Track</th>
        <th>Grade</th>
        <!-- Add more <th> elements for each column if needed -->
    </tr>
    </thead>
    <tbody>
    <% data.forEach(row => { %>
        <tr>
            <td><%= row.username %></td>
            <td><%= row.track %></td>
            <td><%= row.grade %></td>
            <!-- Add more <td> elements for each column if needed -->
        </tr>
    <% }); %>
    </tbody>
</table> <!-- Form starts here -->
        <!-- Your table content remains unchanged -->
        <input class="form__button" type="submit" value="Search"> <!-- Submit button -->
</form>
</body>
</html>
